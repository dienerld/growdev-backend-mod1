{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@database/*": ["./src/infra/database/*"],
      "@models/*": ["./src/core/models/*"],
      "@usecases/*": ["./src/core/usecases/*"],
      "@presentation/*": ["./src/core/presentation/*"],
      "@configs/*": ["./src/configs/*"],
      "@http/*": ["./src/infra/http/*"]
    },
    "resolveJsonModule": true,
    "outDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
